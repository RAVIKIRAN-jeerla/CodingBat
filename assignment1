#SIMPLE INTREST
import java.util.Scanner;

public class SimpleIntrest {
    public static void main(String[] args) {
        int r;
        double intrest;
        Scanner input=new Scanner(System.in);
        System.out.println("enter the Principal Amount and then Time");
        int p=input.nextInt();
        int t=input.nextInt();
        if(p>10000) {
            r=10;
             intrest = (p * t * r) / 100;
        }
        else if (p>=5000&&p<=10000){
            r=8;
            intrest=(p * t * r)/100;

        }
        else {
            r=5;
            intrest=(p * t * r)/100;

        }
        System.out.println("SIMPLE INTREST FOR YOUR INPUTS IS : "+intrest);
    }
}

