# STUDENT GRADING 
import java.util.Scanner;

public class Grade {
    public static void main(String[] args) {
        Scanner input=new Scanner(System.in);
        System.out.println("Enter the obtained marks for your subject respectively");
        System.out.println("enter the obtained marks for english out of 100");
        int english=input.nextInt();
        System.out.println("enter the obtained marks for kannada out of 100");
        int kannada=input.nextInt();
        System.out.println("enter the obtained marks for physics out of 100");
        int physics= input.nextInt();
        System.out.println("enter the obtained marks for chemistry out of 100");
        int chemistry=input.nextInt();
        System.out.println("enter the obtained marks for Maths out of 100");
        int maths=input.nextInt();
        int total=english+kannada+physics+chemistry+maths;
        double average=total/5;
        if(average>90){
            System.out.println("your grade is : A+");
        }
        else if (average>80&&average<=90){
            System.out.println("your grade is : A");
        }
        else if (average>60&&average<=80){
            System.out.println("your grade is : B+");
        }
        else if (average>=40&&average<=60){
            System.out.println("your grade is : B");
        }
        else {
            System.out.println("You Failed in this exam ,Better luck next time");
        }
    }
}

