#BILLING
import java.util.Scanner;

public class Billing {
    public static void main(String[] args) {
        Scanner input=new Scanner(System.in);
        System.out.println("enter how many GB data you have consumed in this month");
        int data=input.nextInt();
        int amount;
        if (data<=10){
            System.out.println(" You have to pay 300 rupees");
        }
        else if (data>10&&data<=30){
             amount=5*(data-10)+300;
            System.out.println("you have to pay "+amount);
        }
        else{
            amount=3*(data-30)+400;
            System.out.println("you have to pay "+amount);
        }

    }
}

